<h1><%= emoji_team(@game.home) %> vs <%= team_emoji(@game.away) %></h1>

<div id = "messages">
  <% @game.stream.each do |message| %>
    <%= render(partial: 'league/games/message',
               locals: { message: message, scroll: false }) %>
  <% end %>
</div>

<%= turbo_stream_from("game_#{@id}") if @game.in_progress %>
